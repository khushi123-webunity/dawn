    },
    {
      "type": "range",
      "id": "textfontmob",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "text font size(mobile)",
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo with review"
    }
  ]
