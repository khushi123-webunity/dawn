{{ 'logo-with-review.css' | asset_url | stylesheet_tag }}

<section class="logo-review logo-review-{{ section.id }}">
  <div class="logo-review-bg">
    <div class="logo-review-flex-items page-width">
      <div class="logo-review-on-review">
        <div class="logo-review-btn-logo">
          {% if section.settings.btnname != blank %}
            <a
              class="logo-btn-text"
              href="{% if section.settings.btnurl != blank %}{{ section.settings.btnurl }}{% else %}javascript:void(0);{% endif %}"
            >
              {{ section.settings.btnname }}
            </a>
          {% endif %}
          {% if section.settings.image != blank %}
            <div class="review_count_text">
              <div class="star--image-main">
                {% for i in (1..section.settings.count) %}
                  {% if section.settings.count != blank %}
                    <img src="{{ section.settings.image | img_url: 'master' }}">
                  {% endif %}
                {% endfor %}
              </div>
              {% if section.settings.text != blank %}
                <div class="review-text-inner">
                  <p>{{ section.settings.text }}</p>
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
      {% if section.blocks.size != 0 %}
        <div class="reveiw-image-logo">
          {% for block in section.blocks %}
            {% if block.settings.image != blank %}
              <div class="review--logo-image">
                <img src="{{ block.settings.image | img_url: 'master' }}">
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
  .logo-review-{{ section.id }} .logo-review-bg{
    background: {{section.settings.Bgcolor}};
  }

  @media(min-width: 768px){
    .logo-review-{{ section.id }} .logo-review-bg{
      padding-top: {{section.settings.PaddingTopDesk}}px;
      padding-bottom: {{section.settings.PaddingBottomDesk}}px;
    }
    .logo-review-{{ section.id }} .logo-btn-text{
      font-size: {{section.settings.BtnFontDesk}}px;
    }
    .review-text-inner p {
      font-size: {{ section.settings.textfontdesk }}px;
    }
  }

  @media(max-width: 768px){
    .logo-review-{{ section.id }} .logo-review-bg{
      padding-top: {{section.settings.PaddingTopMob}}px;
      padding-bottom: {{section.settings.PaddingBottomMob}}px;
    }
    .logo-review-{{ section.id }} .logo-btn-text{
      font-size: {{section.settings.BtnFontMob}}px;
    }
    .review-text-inner p {
      font-size: {{ section.settings.textfontmob }}px;
    }
  }

  .logo-btn-text{
    background: {{section.settings.btnbgcolor}};
    color: {{section.settings.btnfontcolor}};
    border: 2px solid {{section.settings.btnfontcolor}};
  }
{% endstyle %}

